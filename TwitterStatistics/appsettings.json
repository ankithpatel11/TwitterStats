{

  "AppSettings": {
    "TwitterURL": "https://api.twitter.com/2/tweets/sample/stream?tweet.fields=created_at,entities,public_metrics",
    "TwitterBearerToken": "{Twitter_Token}",
    "TwitterPullTimer": 2000
  },
  "Logging": {
    "IncludeScopes": false,
    "MinimumLogLevel": "Information",
    "MinimumTelemetryLogLevel": "Verbose",
    "Information": {
      "LogLevel": {
        "Default": "Information"
      },
      "LogPath": {
        "_xsi:type": "File",
        "_layout": "${longdate} ${logger} ${message}",
        "_keepFileOpen": "false",
        "_fileName": "logs/log.txt",
        "_archiveFileName": "${basedir}/logs/log.{#}.txt",
        "_archiveEvery": "Day",
        "_archiveNumbering": "Rolling",
        "_maxArchiveFiles": "7",
        "_concurrentWrites": "true"
      }
    }
  },
  "Loggingv2": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
